{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2020",
    "module": "ES6",
    "rootDir": "./src",
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "baseUrl": "./",
    "paths": {
      "@application/*": [
        "./src/application/*"
      ],
      "@infrastructure/*": [
        "./src/infrastructure/*"
      ],
      "@adapters/*": [
        "./src/adapters/*"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@types": [
        "./src/types/global"
      ],
      "@domain/*": [
        "./src/domain/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@src/*": [
        "./src/*"
      ]
    },
    "resolveJsonModule": true,
    "outDir": "./dist/src",
    "removeComments": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}